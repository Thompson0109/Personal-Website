<div class="author">
    <h1 class="author__heading">Hi, I am Louis.</h1>
    <p class="author__body">These are some of my music reccomendations</p>
  </div>
  
  <img src="/img/HipHop-Art-Cover.jpg" alt="now this is 90's hiphop" class="hero-image">
  
  <section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>
  
    <ul class="article-ul">
      <% data.forEach(post => { %>
        <li>
          <a href="/post/<%= post._id %>">
            <span><%= post.title %></span>
            <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
          </a>
        </li>
      <% }) %>
    </ul>

    <a href="#" class="pagination">&lt; View Older Posts </a>
  
  </section>
